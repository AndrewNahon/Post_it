<div class="row">
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
    <% end %>
    <%= post.vote_count %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>

  <div class='span8 well'>
    <%= render 'categories/category', post: post %>
    <h3><%= link_to post.title, format_url(post.url) %></h3>
    <p><%= post.description %></p>
    <p>
      <small>By <%= link_to post.user.username, user_path(post.user) %> at <%= format_datetime post.created_at %></small>
    </p>
    <p>  <%=link_to "#{post.comments.size} comments", post_path(post) %></p>
  </div>
</div>